<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_34sdp"
    android:background="#80000000"
    android:gravity="center_vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:padding="@dimen/_6sdp"
        app:tint="@color/white"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <TextView
        android:id="@+id/mTvTimeControl"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="00:00"
        android:textColor="#979797"
        android:textSize="@dimen/_9sdp" />

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/sb_range_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:rsb_gravity="center"
        app:rsb_mode="single"
        app:rsb_progress_default_color="#33ffffff"
        app:rsb_progress_drawable="@drawable/background_gradient_red"
        app:rsb_progress_height="4dp"
        app:rsb_progress_radius="2dp"
        app:rsb_thumb_drawable="@drawable/ic_thumb_new"
        app:rsb_thumb_height="16dp"
        app:rsb_thumb_width="16dp" />

    <TextView
        android:id="@+id/mTvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:text="00:00"
        android:textColor="#979797"
        android:textSize="@dimen/_9sdp" />
</LinearLayout>
